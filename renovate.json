{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 0,
  "ignorePaths": [
    "mailrise/*",
    "portainer-agent/*",
    "portainer/*",
    "qbittorrent/*",
    "radicale/*",
    "watchtower/*"
  ],
  "schedule": [
    "before 8am on Saturday",
    "before 8am on Sunday"
  ]
}
