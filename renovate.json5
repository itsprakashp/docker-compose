{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended'
  ],
  prHourlyLimit: 0,
  timezone: 'Asia/Kolkata',
  schedule: [
    'before 8am on Saturday',
    'before 8am on Sunday'
  ],
  ignorePaths: [
    'mailrise/*',
    'minio/*',
    'portainer-agent/*',
    'portainer/*',
    'qbittorrent/*',
  ]
}
